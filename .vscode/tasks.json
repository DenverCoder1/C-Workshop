{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "dependsOn": [
                "create out directory",
                "run doxygen",
            ],
            "command": "/usr/bin/gcc",
            "args": [
                "-Wall",
                "-Werror",
                "-g",
                "${fileDirname}/*.c",
                "-lm",
                "-o",
                "${fileDirname}/out/a.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "create out directory",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "mkdir -p out"
        },
        {
            "label": "run doxygen",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "doxygen",
            "problemMatcher": []
        },
        {
            "label": "run doxygen and open docs",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "run doxygen",
            "command": "brave \"${workspaceFolder}/docs/html/index.html\"",
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}
